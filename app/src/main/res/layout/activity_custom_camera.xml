<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ca.ualberta.cmput301f18t11.medicam.utils.CustomTextureView
        android:id="@+id/camera_texture_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="100dp" />

    <ImageView
        android:id="@+id/camera_overlay"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="100dp"
        />

    <Button
        android:id="@+id/capture_photo_button"
        android:text="@string/capture_image"
        android:onClick="capturePhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <!--TODO:function to (not)display overlay-->
    <ToggleButton
        android:id="@+id/toggle_camera_overlay"
        android:text="@string/toggle_onion_skin"
        android:textOff="Overlay Off"
        android:textOn="Overlay On"
        android:onClick="toggleCameraOverlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="0dp"
        android:layout_toStartOf="@+id/capture_photo_button"
        tools:ignore="UnknownId" />

</RelativeLayout>