<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ShowSearchResultActivity">

    <!--Import of the toolbar: Blank Version -->
    <include
        android:id="@+id/showSearchPage_toolbar"
        layout="@layout/toolbar"
        app:layout_constraintTop_toTopOf="parent"></include>

    <!-- Page elements below -->

    <ListView
        android:id="@+id/search_result_list_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="16dp"
        android:dividerHeight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showSearchPage_toolbar" />
</android.support.constraint.ConstraintLayout>